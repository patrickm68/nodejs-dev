ARG INSTANA_LAYER=instana/aws-fargate-nodejs:latest
ARG NODEJS_VERSION=12.16.3

FROM ${INSTANA_LAYER} as instanaLayer

FROM node:${NODEJS_VERSION}-alpine
WORKDIR /usr/src/app

COPY package*.json ./
RUN apk add --no-cache --virtual .gyp \
        build-base \
        python \
    && npm install --only=production

COPY . .

COPY --from=instanaLayer /instana /instana
RUN /instana/setup.sh
ENV NODE_OPTIONS="--require /instana/node_modules/@instana/aws-fargate"

# The additional packages needed to compile native add-ons can be removed after
# running "npm installl" and /instana/setup.sh (results in smaller image).
RUN apk del .gyp python

EXPOSE 4816

ENTRYPOINT [ "node", "." ]
